<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atualizaExercicio.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="7"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="CharacterSpacing" Value="0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="apptela.jpg" Aspect="AspectFill" 
               VerticalOptions="Fill"
               HorizontalOptions="Fill"/>

        <BoxView BackgroundColor="#80000000" 
             VerticalOptions="FillAndExpand"
             HorizontalOptions="FillAndExpand"/>

        <!-- Header -->
        <VerticalStackLayout HorizontalOptions="FillAndExpand"
              VerticalOptions="Start"
              Spacing="0">
            <Grid BackgroundColor="#010101" 
                  Padding="15,10" 
                  HeightRequest="70" 
                  VerticalOptions="Start">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Label Text="MoveTech"
                       TextColor="Lavender"
                       FontSize="30"
                       Margin="0,0,10,0"
                       FontFamily="QuicksandMedium"
                       VerticalOptions="Center"
                       Grid.Column="2"/>
           
            </Grid>
        </VerticalStackLayout>

        <!-- Conteúdo central -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="10">
            <Label Text="Conecte-se com seu foco."
                   TextColor="Lavender"
                   FontSize="20"
                   HorizontalOptions="Center"
                   FontFamily="QuicksandMedium"/>

            <Label Text="Alcance seus objetivos."
                   TextColor="Lavender"
                   FontSize="20"
                   HorizontalOptions="Center"
                   FontFamily="QuicksandMedium"/>
        </VerticalStackLayout>

        <!-- Botões de Login e Cadastro -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="End"
                             Spacing="10"
                             Padding="0,0,0,20"
                             Margin="0,0,0,50">
            <HorizontalStackLayout Spacing="15"
                                   HorizontalOptions="Center">

                <Button x:Name="LoginButton"
                        Text="Login"
                        BackgroundColor="#2d2727"
                        TextColor="Lavender"
                        CornerRadius="20"
                        Padding="20,10"
                        WidthRequest="120"
                        FontFamily="QuicksandRegular"
                        Clicked="LoginButton_Clicked"/>

                <Button x:Name="CadastroButton"
                        Text="Cadastre-se"
                        BackgroundColor="#4b0082"
                        TextColor="White"
                        CornerRadius="20"
                        Padding="20,10"
                        WidthRequest="120"
                        FontFamily="QuicksandRegular"
                        Clicked="CadastroButton_Clicked"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
        
        <Grid x:Name="MenuGrid"
              VerticalOptions="End"
              HorizontalOptions="Start"
              RowDefinitions="Auto"
              ColumnDefinitions="Auto">
            <ImageButton Source="info_25.png"
                   
                   Aspect="AspectFit"      
                   Padding="0"
                   BorderWidth="0"      
                   Margin="5,0,0,5"
                   BackgroundColor="Transparent"
                   Clicked="Info_Clicked"/>
        </Grid>
        
        <!-- Stack com as opções (inicialmente invisível) -->
        <VerticalStackLayout x:Name="MenuOpcoes"
                        IsVisible="False"
                        Spacing="0"
                        VerticalOptions="End"
                        HorizontalOptions="Start"
                        Margin="35,0,0,13"> 
           
            <HorizontalStackLayout>
                <Button Text="Sobre"
                    FontSize="12"                
                    Clicked="Sobre_Page"
                    BackgroundColor="Transparent"
                    Opacity="0.8"                
                    TextColor="DarkGray"
                    FontAttributes="Bold"
                    WidthRequest="60"
                    HeightRequest="25"
                    FontFamily="QuickSand"/>

                <Button Text="Contato"
                    FontSize="12"  
                    Clicked="Contato_Page"
                    BackgroundColor="Transparent"
                    Opacity="0.8"
                    TextColor="DarkGray"
                    FontAttributes="Bold"
                    WidthRequest="60" 
                    HeightRequest="25"
                    FontFamily="QuickSand"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
