<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:controls="clr-namespace:atualizaExercicio.Controls"
             x:Class="atualizaExercicio.Views.VisualizarTreino.Visualizar_TreinoPage2"
             Title="Visualizar_TreinoPage2"
             BackgroundColor="#010101">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Text Styles -->
            <Style x:Key="TitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontFamily" Value="QuicksandRegular"/>
            </Style>

            <Style x:Key="SubLabel" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="#BBBBBB"/>
                <Setter Property="FontFamily" Value="QuicksandRegular"/>
            </Style>

            <Style x:Key="SmallLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="#9E9E9E"/>
                <Setter Property="FontFamily" Value="QuicksandLight"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Padding" Value="7"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="CharacterSpacing" Value="0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto">

            <!-- Header -->
        <Grid Grid.Row="0" HeightRequest="70"></Grid>
       
        <!-- Título do Treino Grid.Row="1" -->
            <VerticalStackLayout 
                     HorizontalOptions="Center"
                     Margin="0,70,0,10"
                     HeightRequest="20" 
                     VerticalOptions="Start">                
                <Label x:Name="TituloTreinoLabel"
                       Text="Treino" 
                       TextColor="Lavender"
                       FontSize="17"
                       FontFamily="QuicksandSemibold"             
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

        <!-- Conteúdo - Lista de Exercícios Grid.Row="2" Margin="0,-190,0,0"-->
        
            <Frame Grid.Row="1"
                   Margin="20,20,20,0"
                BackgroundColor="#4A795CB3"
                CornerRadius="12"
                HasShadow="False"
                TranslationY="-20"
               >

                <Grid RowDefinitions="Auto,Auto,*">

                    <!-- Cabeçalho da lista -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,*"
                          HeightRequest="20">

                        <Label Grid.Column="0"                           
                           Text="Exercício" 
                           FontSize="17"
                           TextColor="White"
                           FontFamily="QuicksandRegular"    
                           HorizontalOptions="Start"                          
                           Margin="10,0,0,0"/>

                        <Label Grid.Column="1"                          
                            Text="Séries x Reps" 
                            FontSize="17"
                            TextColor="White"
                            FontFamily="QuicksandRegular"   
                            HorizontalOptions="End"                        
                            Margin="0,0,10,0"/>
                    </Grid>

                    <!-- Linha divisória -->
                    <BoxView Grid.Row="1" HeightRequest="2" Color="#E6E6FA" Margin="0,5"/>

                    <!-- Lista de exercícios -->
                    <CollectionView Grid.Row="2"
                        x:Name="ExerciciosCollectionView"
                        SelectionMode="None"
                        VerticalScrollBarVisibility="Never"
                        Margin="0,5,0,0">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Spacing="0">

                                    <Grid ColumnDefinitions="Auto,*,*"
                                        HeightRequest="65"
                                        Margin="0,5"
                                          Padding="0,10">

                                        <!-- Imagem do exercício -->
                                        <Frame Grid.Column="0"
                                               CornerRadius="10"
                                               Padding="0"
                                               Margin="5,0,0,0"
                                               HasShadow="False"
                                               IsClippedToBounds="True"                      
                                               BackgroundColor="Transparent"
                                               BorderColor="Transparent"
                                               HeightRequest="50"
                                               WidthRequest="50">
                                            <Image Source="{Binding ImagemExercicio}" 
                                                   Aspect="AspectFill"
                                                   HorizontalOptions="Fill"
                                                   VerticalOptions="Fill">
                                                <Image.Triggers>
                                                    <DataTrigger TargetType="Image"
                                                                 Binding="{Binding ImagemExercicio}"
                                                                 Value="{x:Null}">
                                                        <Setter Property="Source" Value="placeholder_exercicio.png" />
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Image"
                                                                 Binding="{Binding ImagemExercicio}"
                                                                 Value="">
                                                        <Setter Property="Source" Value="placeholder_exercicio.png" />
                                                    </DataTrigger>
                                                </Image.Triggers>
                                            </Image>
                                        </Frame>

                                        <!-- Nome do exercício -->
                                        <Label Grid.Column="1"
                                               HorizontalOptions="Start"
                                               Margin="10,10,0,0"
                                               Text="{Binding NomeExercicio}"
                                               TextColor="White"
                                               FontFamily="QuicksandRegular"
                                               FontSize="14"/>

                                        <!-- Séries/Reps e botão menu -->
                                        <Grid Grid.Column="2" ColumnDefinitions="Auto,Auto"
                                              HorizontalOptions="End"
                                              MinimumWidthRequest="145">
                                            <Label Grid.Column="0"
                                                   Margin="50,10,0,0"
                                                   Text="{Binding SeriesReps}"
                                                   TextColor="White"
                                                   FontFamily="QuicksandRegular"
                                                   FontSize="14"/>

                                            <ImageButton Grid.Column="1"
                                                         Source="more_vert_22dp_lavender.png"                                     
                                                         HeightRequest="22"                                     
                                                         BackgroundColor="Transparent"
                                                         Margin="10,-8,0,0"
                                                         Clicked="MenuExercicio_Clicked"/>
                                        </Grid>
                                    </Grid>

                                    <BoxView HeightRequest="1" Color="#E6E6FA" Margin="0,5"/>

                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Frame>

            <!-- Botão Concluir Treino -->
            <VerticalStackLayout Grid.Row="2"
            HorizontalOptions="Center"
            Margin="0,0,0,20"
            VerticalOptions="End">
                <Button Text="Concluir Treino"
            Clicked="ConcluirTreino_Clicked"
            BackgroundColor="#4D2D8C"
            TextColor="White"
            FontSize="14"
            FontFamily="QuicksandSemibold"
            CornerRadius="20"
            WidthRequest="327"
            HeightRequest="40"/>
            </VerticalStackLayout>


            <!-- Menu sobreposto -->
        <controls:MenuHamburguer x:Name="menuHamburguer"
                   Grid.RowSpan="2"
                   VerticalOptions="Start"/>
    </Grid>
    
    
</ContentPage>