<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atualizaExercicio.Views.Menu.ContatoPage1"
             Title="ContatoPage1">


    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="apptela.jpg" Aspect="AspectFill" 
               VerticalOptions="Fill"
               HorizontalOptions="Fill"/>

        <BoxView BackgroundColor="#80000000" 
             VerticalOptions="FillAndExpand"
             HorizontalOptions="FillAndExpand"/>

        <!-- Header -->
        <VerticalStackLayout HorizontalOptions="FillAndExpand"
              VerticalOptions="Start"
              Spacing="0">
            <Grid BackgroundColor="#010101" 
                  Padding="15,10" 
                  HeightRequest="70" 
                  VerticalOptions="Start">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Label Text="MoveTech"
                       TextColor="Lavender"
                       FontSize="20"
                       Margin="0,0,10,0"
                       FontFamily="QuicksandMedium"
                       VerticalOptions="Center"
                       Grid.Column="2"/>
            </Grid>
        </VerticalStackLayout>

        <ScrollView>
        <!-- Texto centralizado no restante da tela -->
        <VerticalStackLayout VerticalOptions="Center">
            <Grid RowDefinitions="*,*">

                <Frame Grid.Row="0"
                   BackgroundColor="#2c2c3e"
                   Opacity="0.9"
                   Padding="10"
                   Margin="30,60,30,15"
                   BorderColor="Transparent">
                    <VerticalStackLayout>                       
                        <Image 
                               Source="contato.png"
                               HeightRequest="30"
                               Margin="0,5,0,5"
                               HorizontalOptions="Center"/>

                        <Label Text="Encontrou algum bug &#10;ou tem sugestões de melhoria?&#10; Fale com a gente pelo e-mail:&#10; movetechcontato@movetech.com"
                               LineBreakMode="WordWrap"
                               FontSize="15"
                               Margin="15,20,15,15"
                               TextColor="White"
                               CharacterSpacing="1.4"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               FontFamily="QuicksandRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botão de Voltar centralizado na parte inferior -->
                <Button Grid.Row="2"
            x:Name="VoltarButton1"
            Text="Voltar"
            BackgroundColor="#4D2D8C"
            TextColor="#FFFFFF"
            Opacity="0.8"
            CornerRadius="20"
            Padding="20,10"
            FontFamily="QuicksandRegular"
            Clicked="VoltarButton1_Clicked"
            WidthRequest="120"
            HeightRequest="40"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,40,0,20"/>

            </Grid>
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>