<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:atualizaExercicio.Controls"
             x:Class="atualizaExercicio.Views.Home"
             Title="Home"
             Background="#010101">


    <ContentPage.Resources>
        <ResourceDictionary>           

            <!-- Text Styles -->
            <Style x:Key="TitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontFamily" Value="QuicksandRegular"/>
            </Style>

            <Style x:Key="SubLabel" TargetType="Label">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="TextColor" Value="#BBBBBB"/>
                <Setter Property="FontFamily" Value="QuicksandRegular"/>
            </Style>

            <Style x:Key="SmallLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="#9E9E9E"/>
                <Setter Property="FontFamily" Value="QuicksandLight"/>
            </Style>

            <Style TargetType="SearchBar">
                <Setter Property="FontFamily" Value="QuicksandRegular"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Padding" Value="7"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="CharacterSpacing" Value="0"/>

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
   
    <Grid RowDefinitions="Auto,*" Padding="0">

         <!-- Header vazio -->
         <Grid Grid.Row="0" HeightRequest="70" BackgroundColor="#010101"></Grid>
            

        <ScrollView x:Name ="Main"  Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="18">                   

                <!-- Search bar + Novo Treino -->

                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center" ColumnSpacing="8" Padding="0">
                        <!-- optional left icon -->
                        <SearchBar Grid.Column="1"
                                   Placeholder="Buscar atividade"
                                   PlaceholderColor="#CABAEB"
                                   BackgroundColor="#2C2C2C"
                                   TextColor="#CABAEB"
                                   FontFamily="QuicksandRegular"
                                   HeightRequest="45"
                                   VerticalOptions="Center"/>

                        <!-- Botão "Novo Treino" -->
                        <Grid Grid.Column="2"                             
                              HorizontalOptions="End"
                              VerticalOptions="Center"
                              Margin="5,0,0,0">

                            <!-- Botão real — irá receber o clique -->
                            <ImageButton 
                                    Source="addtreino.png"
                                    Background ="Transparent"                                    
                                    Padding="0"
                                    Command="{Binding NovoTreinoCommand}"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill"
                                    Clicked="novoTreino_Clicked"/>                            
                        </Grid>

                    </Grid>

                <Frame CornerRadius="12"
                       Padding="16"
                       HasShadow="False"
                       BackgroundColor="#4C795CB3">

                    <!-- Conteúdo de texto centralizado -->
                    <VerticalStackLayout Spacing="8"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                        <Label Text="Você ainda não possui nenhum treino."
                               Style="{StaticResource SubLabel}" 
                               FontSize="16"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>

                        <Label Text="Clique no botão '+ Novo Treino' para começar!"
                               Style="{StaticResource SubLabel}" 
                               FontSize="16"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>

                    </VerticalStackLayout>

                </Frame>

                

                    <Frame CornerRadius="16"
                           Padding="0"
                           HasShadow="False"
                           BackgroundColor="{StaticResource CardDark}">
                        <Grid HeightRequest="145" RowDefinitions="Auto,*" ColumnDefinitions="* , Auto">
                            <!-- Imagem de fundo que preenche todo o Grid -->
                            <Image Source="banner.jpg"
                                   Aspect="AspectFill"
                                   Opacity="1"
                                   Grid.RowSpan="2"
                                   Grid.ColumnSpan="2"/>

                            <!-- Título no topo, centralizado -->
                            <Label Grid.Row="0" 
                                   Grid.Column="0" 
                                   Grid.ColumnSpan="2"
                                   Text="Veja seus treinos"
                                   FontFamily="QuicksandSemibold"
                                   FontSize="16"
                                   TextColor="#161823"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start"
                                   Margin="12,8,12,0"/>

                            <!-- Botão pílula à direita, sobre a imagem -->
                            <Button Grid.Row="1" Grid.Column="1"
                                    Text="Clique aqui"
                                    CornerRadius="15"
                                    BackgroundColor="#4d0082"
                                    TextColor="White"
                                    FontFamily="QuicksandRegular"
                                    FontSize="14"
                                    Padding="18,8"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    Margin="0,0,16,12"
                                    Clicked="Button_Clicked_VerTreinos"/>
                        </Grid>
                    </Frame>

                    <BoxView HeightRequest="30" BackgroundColor="Transparent"/>

                </VerticalStackLayout>
            </ScrollView>
        

        <!-- Menu sobreposto -->
        <controls:MenuHamburguer x:Name="menuHamburguer"
                                 Grid.RowSpan="2"
                                 VerticalOptions="Start"/>

    </Grid>
    
</ContentPage>